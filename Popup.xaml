<Window x:Name="PopupWindow" x:Class="LF10_Lager_Projekt.Popup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LF10_Lager_Projekt"
        mc:Ignorable="d"
        Title="Popup" Height="200" Width="600" Icon="/Tabellen Thorsten.jpeg" WindowStyle="None">
    <Grid>
        <Label x:Name="PopupActionName" Content="Hinzufügen" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,55,13,55"/>
        <Button x:Name="cancelButton" Content="abbrechen" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="60" Height="20" Margin="0,0,15,10" Click="cancelButton_Click"/>
        <Button x:Name="okButton" Content="OK" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="60" Height="20" Margin="0,0,90,10"/>

    </Grid>
</Window>
